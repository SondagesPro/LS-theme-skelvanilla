<!-- Question {{ aQuestion.qid  }}  -->
{% if ( aSurveyInfo.options.questionhtag == 'on' ) %}
    {% set tagSection = 'section' %}
{% else %}
    {% set tagSection = 'div' %}
{% endif %}
<{{ tagSection }} {{ aQuestion.attributes }} class="{{ aQuestion.class }} {{ aQuestion.input_error_class }} {{ aSurveyInfo.class.questioncontainer }}" {{ aSurveyInfo.attr.questioncontainer }}>
    {{ include('./subviews/survey/question.twig') }}
</{{ tagSection }}>
<!-- End of question  {{ aQuestion.qid  }}  -->
