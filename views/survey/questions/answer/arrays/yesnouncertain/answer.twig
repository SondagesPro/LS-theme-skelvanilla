{#
/**
 * yesnouncertain Html
 *
 * @var $sColumns   : the columns, generated with the view columns/col.php
 * @var $sHeaders   : the headers, generated with the view rows/cell/thead.php
 * @var $sRows      : the rows, generated with the view rows/answer_row.php
 * @var $anscount
 * @var $extraclass
 * @var $answerwidth
 *
 */
#}
<!-- Yes/No/Uncertain-->
<!-- answer -->
<table class="{{ coreClass }} table table-bordered table-hover" role="group" aria-labelledby="ls-question-text-{{ basename }}">
    <colgroup class="col-responses">
        <col class="col-answers"  style='width: {{ answerwidth }}%;' />
            {# columns/col.twig #}
            {{ sColumns }}
    </colgroup>
    <tbody>
        <tr class="ls-heading ls-header" aria-hidden="true">
                {# rows/cell/thead.twig #}
                {{ sHeaders }}
        </tr>
        {% if anscount==0 %}
            <tr>
                <td class="answertext">
                    {{ gT('Error: This question has no answers.') }}
                </td>
            </tr>
        {% endif %}

            {# rows/answer_row.php #}
            {{ sRows }}
    </tbody>
</table>
<!-- end of answer -->
